<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_shop"
    tools:context=".ui.view.profil.EditProfilShop">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_margin_vertical_start_edit_profil_shop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_margin_vertical_end_edit_profil_shop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_margin_horizontal_edit_profil_shop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.01" />

    <Button
        android:id="@+id/backButton"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="@string/back"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@id/guideline_margin_vertical_start_edit_profil_shop"
        app:layout_constraintTop_toBottomOf="@id/guideline_margin_horizontal_edit_profil_shop" />

    <ImageView
        android:id="@+id/settingsButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/icon_menu"
        android:contentDescription="@string/contDescProfil"
        app:layout_constraintEnd_toStartOf="@id/guideline_margin_vertical_end_edit_profil_shop"
        app:layout_constraintTop_toBottomOf="@id/guideline_margin_horizontal_edit_profil_shop" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="40dp"
        app:layout_constraintStart_toEndOf="@id/guideline_margin_vertical_start_edit_profil_shop"
        app:layout_constraintTop_toBottomOf="@id/settingsButton">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/editMyProfilPicture"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginBottom="25dp"
                android:contentDescription="@string/contDescProfil" />

            <View
                android:layout_width="75dp"
                android:layout_height="1dp"
                android:background="#445964" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="25dp"
                android:text="@string/titleRegister1"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp">

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline_margin_horizontal_start_edit_profil_shop_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.05" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline_margin_horizontal_end_edit_profil_shop_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.95" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editProfilPseudo"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:hint="@string/formPseudo"
                    android:textColorHint="@color/white"
                    app:layout_constraintStart_toEndOf="@id/guideline_margin_horizontal_start_edit_profil_shop_1"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editProfilEmail"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/formEmail"
                    android:textColorHint="@color/white"
                    app:layout_constraintEnd_toStartOf="@+id/guideline_margin_horizontal_end_edit_profil_shop_1"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:layout_width="75dp"
                android:layout_height="1dp"
                android:background="#445964" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="25dp"
                android:text="@string/titleRegister2"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp">

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline_margin_horizontal_start_edit_profil_shop_2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.05" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline_margin_horizontal_end_edit_profil_shop_2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.95" />

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintStart_toEndOf="@id/guideline_margin_horizontal_start_edit_profil_shop_2"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editProfilNom"
                        android:layout_width="125dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="25dp"
                        android:layout_marginBottom="25dp"
                        android:hint="@string/formName"
                        android:textColorHint="@color/white" />

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editProfilPhone"
                        android:layout_width="175dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="25dp"
                        android:hint="@string/formPhone"
                        android:textColorHint="@color/white" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toStartOf="@id/guideline_margin_horizontal_end_edit_profil_shop_2"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editProfilVille"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="25dp"
                        android:hint="@string/formVille"
                        android:textColorHint="@color/white" />

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editProfilPostal"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:hint="@string/formPostal"
                        android:textColorHint="@color/white" />
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:layout_width="75dp"
                android:layout_height="1dp"
                android:background="#445964" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="25dp"
                android:text="@string/titleRegister3"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp">

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline_margin_horizontal_start_edit_profil_shop_3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.05" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline_margin_horizontal_end_edit_profil_shop_3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.95" />

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintStart_toEndOf="@id/guideline_margin_horizontal_start_edit_profil_shop_3"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editProfilSociety"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="25dp"
                        android:layout_marginBottom="25dp"
                        android:hint="@string/formSociety"
                        android:textColorHint="@color/white" />

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editProfilWebsite"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="25dp"
                        android:hint="@string/formWebsite"
                        android:textColorHint="@color/white" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toStartOf="@id/guideline_margin_horizontal_end_edit_profil_shop_3"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editProfilFunction"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="25dp"
                        android:hint="@string/formFonction"
                        android:textColorHint="@color/white" />

                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:layout_width="75dp"
                android:layout_height="1dp"
                android:background="#445964" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="25dp"
                android:text="@string/titleRegister4"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp">

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline_margin_horizontal_start_edit_profil_shop_4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.05" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline_margin_horizontal_end_edit_profil_shop_4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.95" />

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="25dp"
                    app:layout_constraintStart_toEndOf="@id/guideline_margin_horizontal_start_edit_profil_shop_4"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editProfilFacebook"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="25dp"
                        android:layout_marginBottom="25dp"
                        android:hint="@string/formFacebook"
                        android:textColorHint="@color/white" />

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editProfilTwitter"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="25dp"
                        android:layout_marginBottom="25dp"
                        android:hint="@string/formTwitter"
                        android:textColorHint="@color/white" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="25dp"
                    app:layout_constraintEnd_toStartOf="@id/guideline_margin_horizontal_end_edit_profil_shop_4"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editProfilInstagram"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="25dp"
                        android:hint="@string/formInstagram"
                        android:textColorHint="@color/white" />

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editProfilSnapchat"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="25dp"
                        android:hint="@string/formSnapchat"
                        android:textColorHint="@color/white" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent">

                    <Spinner
                        android:id="@+id/editProfilSubject"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:overlapAnchor="false"
                        android:padding="10dp"
                        android:popupBackground="@color/spinnerShop" />
                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>