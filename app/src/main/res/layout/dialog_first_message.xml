<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingTop="20dp"
    android:paddingBottom="20dp">

    <LinearLayout
        android:id="@+id/layout_first_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="50dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/insertFirstMessage"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/button_main"
            android:inputType="textMultiLine"
            android:padding="5dp"
            android:textColor="@android:color/white" />

    </LinearLayout>

    <ImageView
        android:id="@+id/sendFirstMessageButton"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:background="@android:drawable/ic_menu_send"
        android:contentDescription="@string/contDescDesc"
        app:layout_constraintStart_toEndOf="@id/layout_first_message"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>